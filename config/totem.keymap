            //                                     ┃    DEL    ┃    TAB    ┃    SPC    ┃   ┃   ENTER   ┃           ┃   BSPC    ┃
            //                                     ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛   ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛

            bindings = <
            &kp Q       &kp W       &kp F        &kp P        &kp B      &kp J      &kp L            &kp U        &kp Y       &kp SEMI
            &mt LGUI A  &mt LALT R  &mt LCTRL S  &mt LSHFT T  &kp G      &kp M      &mt RSHFT N      &mt RCTRL E  &mt RALT I  &mt RGUI O
&kp ESCAPE  &kp Z       &kp X       &kp C        &kp D        &kp V      &kp K      &kp H            &kp COMMA    &kp DOT     &kp FSLH    &kp SINGLE_QUOTE
                                    &rus         &lt 2 SPACE  &kp TAB    &kp ENTER  &lt 3 BACKSPACE  &kp DELETE
            >;
        };

        russian_layer {
            label = "RUS";
            bindings = <
       &kp Q       &kp W       &kp E        &kp R        &kp T      &kp Y      &kp U          &kp I        &kp O       &kp P
       &mt LGUI A  &mt LALT S  &mt LCTRL D  &mt LSHFT F  &kp G      &kp H      &mt RSHFT J    &mt RCTRL K  &mt RALT L  &mt RGUI SEMICOLON
&kp Q  &kp Z       &kp X       &kp C        &kp V        &kp B      &kp N      &kp M          &kp COMMA    &kp DOT     &kp FSLH            &kp SQT
                               &eng         &lt 3 SPACE  &kp TAB    &kp ENTER  &shift_delete  &kp BSPC
            >;
